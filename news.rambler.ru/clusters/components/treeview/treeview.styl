@require '../../../assets/shared/@media'

$item()
  background-color #fff
  box-shadow 0 -1px 0 0 #edf0f3 inset
  cursor pointer
  user-select none

  &:hover
    background-color #f6f7f9

  &::before
    content ''
    position absolute
    width 2px
    height 100%
    background-color #315ffb
    visibility hidden
    opacity 0
    transition opacity .25s

  &_selected
    background-color #f6f7f9

  &_selected::before
    visibility visible !important
    opacity 1 !important

.tree_view
  display flex
  flex-direction column
  border-right 1px solid #edf0f3
  background-color #fff

.item
  position relative
  display flex
  width 180px
  height 40px
  +media('medium')
    width 240px
  align-items center
  color #333
  $item()

  &_child_selected
    background-color #fff

  &_child_selected::before
    visibility visible
    opacity 1

.text
  flex-grow 1
  color #333

  &_non_arrow
    padding-left 20px

  &-disabled
    color #9c9da0

  &-extraordinary
    color #ff9700

.child_container

  &_collapsed
    max-height 0
    overflow hidden

.tree_view_children
  position relative
  line-height 40px
  background-color #fff
  $item()

.text_children
  overflow visible
  padding-left 40px
  +media('medium')
    padding-left 40px
  font-size 12px
  transition color .25s

.tree_view_arrow
  display flex
  cursor pointer
  user-select none
  transition transform .25s

.tree_view_arrow_collapsed
  transform rotate(-90deg)

.item_selected
  background-color #f6f7f9

  & .text_children
    color #333
