@require '../../../assets/shared/@media'

.list
  flex-grow 1

  &__item
    display flex
    padding 10px
    background-color #fff
    box-shadow 0 -1px 0 0 #edf0f3 inset
    transition background-color .25s

    &:hover
      background-color #f6f7f9

    &:hover .list__cluster__icons
      opacity 1

  &__cluster
    display flex
    width 100%

    &__photo
      display flex
      align-items center
      height 80px
      flex-grow 0
      flex-shrink 0
      flex-basis 140px
      background-color #edf0f3

      svg
        display block
        margin auto

    img
      width 140px
      height 80px
      image-rendering pixelated

    &__info
      display flex
      flex-grow 1
      flex-shrink 1
      padding-left 10px
      height 80px
      flex-direction column

    &__meta
      display flex
      line-height 20px
      margin -4px 0 4px

    &__content
      display flex
      flex-grow 1

    &__bottom
      display flex

    &__topics
      display flex
      flex-grow 1
      align-items flex-end

    &__icons
      display flex
      opacity 0
      transition opacity .25s

    .list__item:hover .list__item__icons
      opacity 1

    &__title
      line-height 18px
      color #262626
      max-width 541px

    &__citems
      display inline-block
      vertical-align top
      padding 0 8px
      height 22px
      font-size 10px
      line-height 22px
      color #8d96b2
      border 1px solid #edf0f3
      border-radius 2px
      text-align center

    &__source
      font-size 13px
      color #8d96b2
      margin-right 15px

    &__time
      flex-grow 0
      margin-right 15px
      font-size 11px
      line-height 21px
      color #8d96b2
      text-transform uppercase

    &__index
      padding 0 8px
      height 20px
      margin-left auto
      border-radius 2px
      background-color #aebbc9
      font-size 11px
      font-weight 400
      line-height 20px
      text-align center
      color #fff

    &__topic
      margin-right 5px
      padding 0 10px
      height 20px
      font-size 12px
      font-weight 400
      line-height 18px
      background-color #edf0f3
      color #4a4a4a
      border-radius 2px

    &__clicks
      flex-grow 0
      flex-shrink 0
      margin-left auto
      font-size 11px
      line-height 18px
      letter-spacing 1px
      color #9b9b9b

    &__click_delta
      color #57ca5f

    &__bottom_icon
      flex-grow 1
      flex-shrink 0
      margin-right 5px
      align-self flex-start
      display flex
      width 34px
      height 34px
      cursor pointer

      &_disabled
        opacity .5
        filter grayscale(100%)
          cursor default

    &__mark
      margin-left auto
      padding 0 8px
      height 20px
      font-size 11px
      line-height 18px
      text-align center
      background-color #fff
      border solid 1px
      border-radius 2px

      &_hidden
        color #9b9b9b
        border-color #b6b3b7

      &_not
        color #d78f27
        border-color #faa62c

      &_censor
        color #ce4949
        border-color #f85656
