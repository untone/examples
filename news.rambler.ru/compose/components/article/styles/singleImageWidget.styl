.editor

  &__dropzone
    overflow hidden
    display flex
    z-index 3
    position absolute
    justify-content center
    align-items center
    border 1px dashed transparent
    transition border-color .25s
    cursor pointer
    height 280px
    width 500px

    &_active
      border-color #315efb

    &_icon
      visibility visible
      opacity 1
      transition opacity .25s
      color #d0d8e2

      &_progress
        animation roll 1.5s infinite
        transform rotate(30deg)
        color #315efb
        width 18px
        height 18px

      @keyframes roll
        0%
          transform rotate(0)
        100%
          transform rotate(360deg)

    &_button
      position absolute
      z-index 1
      display flex
      align-items center
      justify-content center
      transition opacity .5s
      width 160px
      height 34px
      font-size 12px
      font-weight 400
      line-height 24px
      text-transform uppercase
      letter-spacing 1px
      color #fff
      background-color #315efb
      transition color .25s, opacity .5s
      cursor pointer
      opacity 0
      user-select none

      &:active
        z-index 2
        background-color #2740cd
        border-color #ccc

  &__dropzone:hover &__dropzone_icon
  &__dropzone_active &__dropzone_icon
    visibility hidden
    opacity 0

  &__dropzone:hover &__dropzone_button
    visibility visible
    opacity 1

  &__slider
    position relative
    width 500px
    height 280px

    &_slide
      margin auto
      width auto
      max-width 500px
      height auto

    &_button
      width 60px
      height 60px
      color #fff
      border none
      outline none
      background-color #315ffb
      transition opacity .25s

    &_icon
      color #fff
