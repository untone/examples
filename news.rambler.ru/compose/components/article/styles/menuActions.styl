.menu
  display flex
  flex-direction column
  width 240px
  background-color #fff

  &__item
    display flex
    width 100%
    height 44px
    cursor pointer

    &:hover
      background-color #f6f7fa

  &__icon
    display flex
    width 44px
    height 44px

  &__text
    display flex
    font-size 14px
    color #262626
    align-self center
