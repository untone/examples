@require '../../../../assets/shared/@media'

.widget
  position relative
  z-index 1
  margin 0 0 85px
  padding 0
  width 500px
  height 280px
  background-color #edf0f3
  transition opacity .25s
  outline none

  &:before
    content ''
    position absolute
    z-index -1
    top -10px
    right -10px
    bottom -65px
    left -10px
    +media('medium')
      top -20px
      right -20px
      bottom -75px
      left -20px
    background-color #fff
    border 1px solid #ced8e3
    visibility hidden
    opacity 0
    transition opacity .5s

  &_active
    z-index 2

    &:before
      box-shadow 0 1px 7px 0 rgba(#7c8286, .35)
      visibility visible
      opacity 1

  &__picture
    position relative
    z-index 2
    display block
    margin auto
    width auto
    max-width 500px
    height auto

  &__footer
    position relative
    z-index 1
    display flex
    align-items center
    margin 20px 0 0
    height 44px

  &__source
    font-size 14px
    font-weight 500
    line-height 22px
    margin-right 5px

  &__menu
    margin-left auto
    user-select none

  &__toggle
    display flex
    flex-direction column
    position absolute
    left -10px
    z-index 5
    top -10px
    box-shadow 0 1px 7px 0 rgba(124, 130, 134, .35)
    +media('medium')
      left -70px
      top -20px

  &__icon
    width 44px
    height 44px
    cursor pointer

  &__wrapper
    background-color #fff
    height 44px

    &::before
      content ''
      position absolute
      width 3px
      height 50%
      opacity 0
      visibility hidden
      background-color #315ffb
      transition opacity .25s

    &_selected
      background-color #f6f7f9

      &::before
        visibility visible !important
        opacity 1 !important

  &__dropdown
    position absolute
    margin-top 3px
    right 0
    display flex
    list-style none
    margin 0
    padding 0
    flex-direction column
    width 240px
    background-color #fff
    box-shadow 1px 2px 7px 0 rgba(123, 129, 133, .3)
    z-index 1
    visibility hidden
    opacity 0

    &_item
      display flex
      width 100%
      height 44px
      cursor pointer

      &:hover
        background-color #f6f7fa

    &_icon
      display flex
      width 44px
      height 44px

    &_text
      display flex
      font-family Roboto
      font-size 14px
      color #262626
      align-self center

  &__dots
    width 30px
    height 30px
    background-color #fff
    border 1px solid #ebedf4
    border-radius 30px
    transition border-color .25s, background-color .25s

  &__menu_open &__dropdown
    visibility visible
    opacity 1
    z-index 2

  &__menu:hover &__dots
    border-color darken(#ebedf4, 10%)

  &__menu_open &__dots
    background-color #f6f7fa
    border-color #f6f7fa !important
