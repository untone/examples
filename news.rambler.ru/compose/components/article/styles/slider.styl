.slider
  position relative
  width 500px
  height 280px

  &__slide
    margin auto
    width auto
    max-width 500px
    height auto

  &__button
    width 60px
    height 60px
    color #fff
    border none
    outline none
    background-color #315ffb
    transition opacity .25s

  &__icon
    color #fff
    cursor pointer

  &__count
    position absolute
    z-index 1
    top 10px
    right 10px
    font-size 14px
    color #fff
