.video_form
  display flex
  padding 20px
  width 400px
  flex-direction column

  &__title
    font-size 14px
    font-weight 500
    margin-bottom 20px
    user-select none
    cursor default

  &__buttons_bar
    display flex
    align-items center
    margin-top 10px

.button
  display flex
  flex-basis 205px
  align-items center
  justify-content center
  height 34px
  font-size 12px
  font-weight 400
  letter-spacing 1px
  text-transform uppercase
  text-align center
  transition background-color .25s, color .25s
  user-select none
  cursor pointer

  &_save
    background-color #315efb
    color #fff

    &:active
      z-index 2
      background-color #2740cd
      border-color #ccc

  &_cancel
    background-color #eaefff
    color #315efb
    margin-left 20px

    &:active
      background-color #c0ccff

.input
  max-height 34px
  flex-grow 1
  flex-basis 100%
  box-sizing border-box
  margin 0 0 10px
  padding 7px 8px
  width 100%
  height 34px
  font-family Roboto, sans-serif
  font-size 13px
  font-weight 400
  line-height 24px
  color #262626
  background-color rgba(#fff, 0)
  border 1px solid #ddd
  border-radius 0
  outline none
  transition border-color .1s linear
  -webkit-appearance none

  &:focus
    padding-bottom 6px
    border-bottom 2px solid #315efb

  &.invalid
    padding-bottom 10px
    border-bottom 2px solid #ff564e

  &::placeholder
    font-weight 300
    color #9b9b9b
